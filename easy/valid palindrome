class Solution {
public:
    bool isPalindrome(string s) {
        return checkpd(s,0,s.length()-1);
    }
    bool checkpd(const string& s,int l,int r){
        if(l>=r) return true;
        if(!isalnum(s[l])) return checkpd(s,l+1,r);
        if(!isalnum(s[r])) return checkpd(s,l,r-1);
        if(tolower(s[l])!=tolower(s[r])) return false;
        return checkpd(s,l+1,r-1);

    }
};
