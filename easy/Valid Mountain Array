class Solution {
public:
    bool validMountainArray(vector<int>& arr) {
        int n = arr.size();
        if (n < 3)
            return false;
        int index = 0, max = arr[0];
        for (int i = 0; i < n; i++) {
            if (max < arr[i]) {
                max = arr[i];
                index = i;
            }
        }
        if(max==arr[0] || max ==arr[n-1]) return false;
        // if(max ==arr[n-1]) return false;
        for (int i = 0; i < index; i++) {
            if (arr[i] < arr[i + 1])
                continue;
            else
                return false;
        }
        for (int i = index; i < n-1; i++) {
            if (arr[i] > arr[i + 1])
                continue;
            else
                return false;
        }
        return true;
    }
};
